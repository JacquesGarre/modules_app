<h3>
    Forms
    <button type="button" class="btn btn-primary" data-controller="modal" data-action="modal#open" data-modal-url-value="{{ path('app_form_add', {'moduleId': module.id }) }}">
        New form
    </button>
</h3>    
<table id="fields-table" class="table table-striped">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Title</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for form in forms %}
            <tr data-id="{{ form.id }}">
                <td>
                    <a class="btn btn-sm btn-success"
                        href="{{ path('app_form_show', {'id': form.id }) }}">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                    <a class="btn btn-sm btn-primary"
                        data-controller="modal"
                        data-action="modal#open"
                        data-modal-url-value="{{ path('app_form_edit', {'id': form.id }) }}">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                    <a class="btn btn-sm btn-danger"
                        data-controller="modal"
                        data-action="modal#open"
                        data-modal-url-value="{{ path('app_form_delete', {'id': form.id }) }}"
                    >
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
                <td>{{ form.title }}</td>
                <td>{{ form.action }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

